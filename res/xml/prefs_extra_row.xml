            android:key="erHintDelay"
            android:summary="@string/sumHintDelay"
            android:title="@string/titleHintDelay" />
        <Preference
            android:key="erHintElevation"
            android:title="@string/titleHintElevation" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/titleCatOther" >
        <Preference
            android:key="callKeyboard"
            android:summary="@string/sumCallKeyboard"
