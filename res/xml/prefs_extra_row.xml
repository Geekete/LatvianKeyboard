<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <PreferenceCategory android:title="@string/titleCatKeyboardPrefs" >
        <CheckBoxPreference
            android:key="erIsHapticOn"
            android:summary="@string/sumisHapticOn"
